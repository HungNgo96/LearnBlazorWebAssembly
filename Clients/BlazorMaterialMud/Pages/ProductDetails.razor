@page "/product/{productId:guid}"

<MudGrid>
    <MudItem md="12" sm="12">
        <MudText Typo="Typo.h3">@ProductDetail.Name</MudText>
    </MudItem>
    <MudItem md="12" sm="12">Rating Placeholder</MudItem>
    <MudItem lg="4" md="6" sm="12">
        <img width="300" src="@ProductDetail.ImageUrl" alt="@ProductDetail.Name" />
    </MudItem>
    <MudItem lg="4" md="6" sm="12">
        <MudRating SelectedValue="@_currentRating" Size="Size.Medium" FullIcon="@Icons.Material.Filled.ThumbUp"
                   EmptyIcon="@Icons.Material.Filled.ThumbUpOffAlt" SelectedValueChanged="RatingValueChanged" />
        <MudElement HtmlTag="span" Style="position:relative; top:-8px; color:gray;">
            (@_reviewCount reviews) | (@_questionCount questions)
        </MudElement>
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h4" Class="mb-4">Price: $@String.Format("{0:0.00}", ProductDetail.Price)</MudText>
            <MudText Typo="Typo.body1">
                <strong>Manufacture date:</strong> @ProductDetail.ManufactureDate.ToShortDateString()
            </MudText>
            <MudText Typo="Typo.body1" Class="mb-4"><strong>Supplier: </strong>@ProductDetail.Supplier</MudText>

            <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Size="Size.Large" />
            <MudElement HtmlTag="span" Style="position:relative; top:-13px; margin-left:5px;">
                Free shipping for this product.
            </MudElement>
            <MudFab StartIcon="@Icons.Material.Filled.ShoppingCart" Color="Color.Tertiary"
                    Label="Add to cart" Class="mt-4" />
        </MudPaper>
    </MudItem>
</MudGrid>
<AdditionalProductInfo ProductInfo="ProductDetail" ReviewCount="_reviewCount" QuestionCount="_questionCount" />