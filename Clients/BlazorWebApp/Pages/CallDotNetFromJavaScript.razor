@page "/dotnetinjs"

<h2>Call DotNet From JavaScript</h2>
<br />
<div class="row">
    <div class="col-md-4">
        <h4>Calling static method from JS</h4>
    </div>

    <div class="col-md-12 mb-3 border-1 border border-primary p-3 rounded-1">
        <button type="button" class="btn btn-success mb-2" onclick="jsFunctions.calculateSquareRoot()">
            Calculate
        </button>
        <span id="string-result" class="form-text"></span>
    </div>
    <div class="col-md-12 mb-3 border-1 border border-primary p-3 rounded-1">
        <h3>Calling C# Instance Methods From JavaScript</h3>
        <button type="button" class="btn btn-success mb-3" @onclick="SendDotNetInstanceToJS">
            Send Instance
        </button>
        <p id="coordinates" style="height: 200px; width: 400px; background-color: #d6d8d6;
            text-align:center; font-size:20px;">
            @_coordinates.X - @_coordinates.Y
        </p>
    </div>
    <div class="col-md-12 mb-3 border-1 border border-primary p-3 rounded-1">
        <OnlineStatusIndicator />
    </div>
</div>